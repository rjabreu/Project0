<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyProjects"
    android:id="@+id/activity_my_projects"
    android:background="#E1F5FE">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:paddingBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button_streamer"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:onClick="myClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/button_scores"
        android:layout_below="@+id/button_streamer"
        android:layout_alignLeft="@+id/button_streamer"
        android:layout_alignStart="@+id/button_streamer"
        android:layout_alignRight="@+id/button_streamer"
        android:layout_alignEnd="@+id/button_streamer"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:onClick="myClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/button_library"
        android:layout_below="@+id/button_scores"
        android:layout_alignRight="@+id/button_scores"
        android:layout_alignEnd="@+id/button_scores"
        android:layout_alignLeft="@+id/button_scores"
        android:layout_alignStart="@+id/button_scores"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:onClick="myClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button_buildIt"
        android:layout_below="@+id/button_library"
        android:layout_alignRight="@+id/button_library"
        android:layout_alignEnd="@+id/button_library"
        android:layout_alignLeft="@+id/button_library"
        android:layout_alignStart="@+id/button_library"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:onClick="myClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button_reader"
        android:layout_below="@+id/button_buildIt"
        android:layout_alignRight="@+id/button_library"
        android:layout_alignEnd="@+id/button_library"
        android:layout_alignLeft="@+id/button_library"
        android:layout_alignStart="@+id/button_library"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:onClick="myClickHandler" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/button_capstone"
        android:layout_below="@+id/button_reader"
        android:layout_alignLeft="@+id/button_reader"
        android:layout_alignStart="@+id/button_reader"
        android:layout_alignRight="@+id/button_reader"
        android:layout_alignEnd="@+id/button_reader"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:onClick="myClickHandler" />

</RelativeLayout>
